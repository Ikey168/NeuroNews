# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.

# Airflow Web UI Credentials
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# Additional Python packages to install in Airflow
# Uncomment and add packages as needed
# _PIP_ADDITIONAL_REQUIREMENTS=openlineage-airflow apache-airflow-providers-postgres

# Database Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Marquez Database Configuration
MARQUEZ_POSTGRES_USER=marquez
MARQUEZ_POSTGRES_PASSWORD=marquez
MARQUEZ_POSTGRES_DB=marquez

# OpenLineage Configuration
OPENLINEAGE_URL=http://marquez:5000
OPENLINEAGE_NAMESPACE=neuro_news_dev
OPENLINEAGE_DISABLED=false

# Development/Debugging
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
