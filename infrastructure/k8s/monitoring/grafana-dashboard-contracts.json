{
  "dashboard": {
    "id": null,
    "title": "Data Contracts Observability",
    "tags": ["data-contracts", "observability", "data-quality"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Contract Validation Overview",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(contracts_validation_success_total[5m]))",
            "legendFormat": "Success Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(contracts_validation_fail_total[5m]))",
            "legendFormat": "Failure Rate", 
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 2,
        "title": "Validation Failure Rate by Pipeline",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(contracts_validation_fail_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m]) / (rate(contracts_validation_fail_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m]) + rate(contracts_validation_success_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m])) * 100",
            "legendFormat": "{{pipeline}} - {{source_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow", 
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Breaking Changes Detected",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "increase(contracts_breaking_change_total{pipeline=~\"$pipeline\"}[5m])",
            "legendFormat": "{{schema_name}} - {{change_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Validation Failures by Error Type",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (error_type) (rate(contracts_validation_fail_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 5,
        "title": "Validation Failures by Source",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (pipeline, source_id) (rate(contracts_validation_fail_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m]))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Dead Letter Queue Messages",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(contracts_dlq_total{pipeline=~\"$pipeline\",source_id=~\"$source_id\"}[5m])",
            "legendFormat": "{{pipeline}} - {{reason}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "msg/sec"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "pipeline",
          "label": "Pipeline",
          "type": "query",
          "query": "label_values(contracts_validation_success_total, pipeline)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1
        },
        {
          "name": "source_id",
          "label": "Source ID",
          "type": "query",
          "query": "label_values(contracts_validation_success_total, source_id)",
          "multi": true,
          "includeAll": true,
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "refresh": 1
        }
      ]
    },
    "editable": true,
    "schemaVersion": 27,
    "version": 1
  }
}
