{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://api.neuronews.com/schemas/dashboard-metrics.json",
  "title": "Dashboard Metrics",
  "description": "Schema for dashboard metrics data exchange",
  "type": "object",
  "properties": {
    "timeRange": {
      "type": "object",
      "properties": {
        "startTime": {
          "type": "string",
          "format": "date-time",
          "description": "Start time for metrics (ISO 8601)"
        },
        "endTime": {
          "type": "string",
          "format": "date-time", 
          "description": "End time for metrics (ISO 8601)"
        },
        "granularity": {
          "type": "string",
          "enum": ["minute", "hour", "day", "week", "month"],
          "description": "Time granularity for aggregation"
        }
      },
      "required": ["startTime", "endTime", "granularity"],
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "properties": {
        "articlesIngested": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "count": {
                "type": "integer",
                "minimum": 0
              },
              "breakdown": {
                "type": "object",
                "properties": {
                  "byCategory": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "bySource": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "integer",
                      "minimum": 0
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "required": ["timestamp", "count"],
            "additionalProperties": false
          },
          "description": "Article ingestion metrics over time"
        },
        "searchQueries": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "count": {
                "type": "integer",
                "minimum": 0
              },
              "avgResponseTimeMs": {
                "type": "number",
                "minimum": 0
              },
              "successRate": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            },
            "required": ["timestamp", "count"],
            "additionalProperties": false
          },
          "description": "Search query metrics over time"
        },
        "sentimentDistribution": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "positive": {
                "type": "integer",
                "minimum": 0
              },
              "negative": {
                "type": "integer",
                "minimum": 0
              },
              "neutral": {
                "type": "integer",
                "minimum": 0
              },
              "avgScore": {
                "type": "number",
                "minimum": -1,
                "maximum": 1
              }
            },
            "required": ["timestamp", "positive", "negative", "neutral"],
            "additionalProperties": false
          },
          "description": "Sentiment analysis distribution over time"
        },
        "systemHealth": {
          "type": "object",
          "properties": {
            "uptime": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "System uptime percentage"
            },
            "errorRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Error rate percentage"
            },
            "avgLatencyMs": {
              "type": "number",
              "minimum": 0,
              "description": "Average response latency in milliseconds"
            },
            "throughputRps": {
              "type": "number",
              "minimum": 0,
              "description": "Throughput in requests per second"
            }
          },
          "additionalProperties": false,
          "description": "Overall system health metrics"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When these metrics were generated"
        },
        "version": {
          "type": "string",
          "description": "Metrics schema version"
        },
        "source": {
          "type": "string",
          "description": "Source system that generated the metrics"
        }
      },
      "required": ["generatedAt", "version"],
      "additionalProperties": false
    }
  },
  "required": ["timeRange", "metrics", "metadata"],
  "additionalProperties": false,
  "examples": [
    {
      "timeRange": {
        "startTime": "2025-08-28T00:00:00Z",
        "endTime": "2025-08-28T23:59:59Z",
        "granularity": "hour"
      },
      "metrics": {
        "articlesIngested": [
          {
            "timestamp": "2025-08-28T10:00:00Z",
            "count": 150,
            "breakdown": {
              "byCategory": {
                "technology": 45,
                "politics": 30,
                "business": 25
              },
              "bySource": {
                "techcrunch": 20,
                "reuters": 35,
                "bbc": 40
              }
            }
          }
        ],
        "systemHealth": {
          "uptime": 0.999,
          "errorRate": 0.001,
          "avgLatencyMs": 250,
          "throughputRps": 1500
        }
      },
      "metadata": {
        "generatedAt": "2025-08-28T11:00:00Z",
        "version": "1.0",
        "source": "metrics-service"
      }
    }
  ]
}
