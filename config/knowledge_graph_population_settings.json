{
    "knowledge_graph": {
        "neptune_endpoint": "your-neptune-cluster.cluster-xxx.us-east-1.neptune.amazonaws.com",
        "port": 8182,
        "use_ssl": true,
        "connection_timeout": 30,
        "max_retries": 3
    },
    
    "entity_extraction": {
        "min_confidence_threshold": 0.6,
        "max_entities_per_article": 100,
        "entity_types": [
            "PERSON",
            "ORG",
            "GPE",
            "MONEY", 
            "DATE",
            "EVENT",
            "PRODUCT",
            "LAW",
            "NORP"
        ],
        "enable_entity_normalization": true,
        "normalize_case": true,
        "remove_stopwords": false,
        "min_entity_length": 2
    },
    
    "relationship_extraction": {
        "min_confidence_threshold": 0.6,
        "max_entity_distance": 100,
        "context_window_size": 50,
        "relationship_types": {
            "PERSON_ORG": "works_for",
            "PERSON_GPE": "located_in", 
            "ORG_GPE": "based_in",
            "PERSON_PERSON": "associated_with",
            "ORG_ORG": "related_to",
            "PERSON_EVENT": "involved_in",
            "ORG_EVENT": "participated_in",
            "PERSON_PRODUCT": "created",
            "ORG_PRODUCT": "produces",
            "LAW_GPE": "applies_to",
            "LAW_ORG": "regulates"
        },
        "enable_bidirectional_relationships": true,
        "max_relationships_per_article": 50
    },
    
    "historical_linking": {
        "enable_event_linking": true,
        "enable_policy_linking": true,
        "max_historical_links_per_entity": 10,
        "temporal_window_years": 5,
        "similarity_threshold": 0.7,
        "link_types": [
            "historical_reference",
            "policy_reference",
            "event_continuation",
            "policy_evolution"
        ]
    },
    
    "batch_processing": {
        "max_batch_size": 100,
        "concurrent_articles": 5,
        "retry_failed_articles": true,
        "max_article_retries": 3,
        "batch_timeout_minutes": 30,
        "checkpoint_frequency": 10
    },
    
    "api_settings": {
        "max_related_entities": 100,
        "default_related_entities": 10,
        "max_search_results": 100,
        "default_search_results": 20,
        "cache_results": true,
        "cache_ttl_minutes": 60,
        "rate_limiting": {
            "requests_per_minute": 100,
            "burst_allowance": 20
        }
    },
    
    "data_validation": {
        "validate_entity_types": true,
        "validate_relationship_types": true,
        "check_duplicate_entities": true,
        "merge_similar_entities": true,
        "similarity_threshold": 0.9,
        "max_entity_text_length": 200,
        "max_relationship_context_length": 500
    },
    
    "logging": {
        "level": "INFO",
        "enable_entity_logging": true,
        "enable_relationship_logging": true,
        "enable_performance_logging": true,
        "log_failed_extractions": true,
        "max_log_entries_per_article": 100
    },
    
    "performance": {
        "enable_parallel_processing": true,
        "max_concurrent_extractions": 5,
        "entity_cache_size": 10000,
        "relationship_cache_size": 5000,
        "graph_query_timeout": 30,
        "enable_query_optimization": true
    },
    
    "monitoring": {
        "enable_metrics": true,
        "track_processing_time": true,
        "track_entity_counts": true,
        "track_relationship_counts": true,
        "track_error_rates": true,
        "metrics_export_interval": 300,
        "alert_thresholds": {
            "high_error_rate": 0.1,
            "slow_processing_time": 30,
            "low_entity_extraction_rate": 0.5
        }
    },
    
    "experimental": {
        "enable_advanced_ner": false,
        "use_transformer_relationships": false,
        "enable_temporal_reasoning": false,
        "use_graph_embeddings": false,
        "enable_cross_document_linking": false
    }
}
